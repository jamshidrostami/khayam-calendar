<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:layoutDirection="ltr"
    >

    <RelativeLayout
        android:layout_width="209dip"
        android:layout_height="110dip"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        >

        <ImageView
	        android:layout_width="20dip"
	        android:layout_height="60dp"
	        android:layout_centerInParent="true"
	        android:background="#85000000"
	        />
        
        <RelativeLayout
            android:layout_width="102dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_alignParentLeft="true"
            >

            <ImageView
                android:id="@+id/hour_bg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@drawable/lp_back_flaps_white" />

            <ImageView
                android:id="@+id/day_month"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:scaleType="fitXY"
                android:layout_marginTop="7dip" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="17dip"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:orientation="horizontal"
                >

                <ImageView
                    android:id="@+id/alarm_icon"
                    android:layout_width="12dip"
                    android:layout_height="12dip"
                    android:scaleType="fitXY"
                    android:layout_marginBottom="3dp"
                    />

                <ImageView
                    android:id="@+id/alarm_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="3dip"
                    android:scaleType="fitXY"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/hour1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="fitXY" />

                <ImageView
                    android:id="@+id/hour2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="fitXY" />
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="102dip"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_alignParentRight="true"
            >
            
            <ImageView
                android:id="@+id/minute_bg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@drawable/lp_back_flaps_white" />

            <ImageView
                android:id="@+id/weekday"
                style="@style/text_small_normal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="7dip" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/minute1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="fitXY" />

                <ImageView
                    android:id="@+id/minute2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="fitXY" />
            </LinearLayout>
            
			<ImageView
				android:id="@+id/ampm"
				android:layout_width="15dip"
				android:layout_height="15dip"
				android:scaleType="fitXY"
				android:layout_alignParentTop="true"
				android:layout_alignParentRight="true"
				android:layout_marginTop="5dp"
				android:layout_marginRight="5dp"
				/>
            
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>